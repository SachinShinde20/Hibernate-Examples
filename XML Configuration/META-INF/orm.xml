<?xml version="1.0" encoding="UTF-8"?>

<!-- XML-based ORM Mapping File -->
<!-- Used to map Java classes (entities) to database tables and columns -->

<entity-mappings
    version="2.2"
    xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm
                        http://xmlns.jcp.org/xml/ns/persistence/orm_2_2.xsd">

    <!-- Declare an entity class to be mapped -->
    <entity class="com.main.Employee" access="PROPERTY">
        <!-- Maps this Java class to the table "Employee" -->
        <table name="Employee"/>

        <!-- Field-to-column mapping section -->
        <attributes>

            <!-- ID field (Primary Key) -->
            <id name="id"> <!-- Java property name: 'id' -->
                <column name="Employee_id"/> <!-- DB column name: 'Employee_id' -->
            </id>

            <!-- Basic field mapping: name -->
            <basic name="name"> <!-- Java property name: 'name' -->
                <column name="Employee_Name"/> <!-- DB column name -->
            </basic>

            <!-- Basic field mapping: city -->
            <basic name="city"> <!-- Java property name: 'city' -->
                <column name="Employee_City"/>
            </basic>

            <!-- Basic field mapping: post -->
            <basic name="post"> <!-- Java property name: 'post' -->
                <column name="Employee_Post"/>
            </basic>

            <!-- Basic field mapping: mobileNo -->
            <basic name="mobileNo"> <!-- Java property name: 'mobileNo' -->
                <column name="E_MobileNumber"/>
            </basic>

        </attributes>
    </entity>
</entity-mappings>
